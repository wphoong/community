<div class="container">
  <h1 class='text-center'>Welcome to Community</h1>
  <br />
  <div class='booyah-box offset-1 col-10'>
    <% @posts.each do |post| %>
      <p>
        <%= link_to post.title, subcommunity_post_path(@subcom, post) %>
        <% if post.user.present? %>
          <small> -<%= post.user.email%></small>
        <% end %>
      </p>
      <hr />
    <% end %>
  </div>
</div>
